
pair<long long, long long> getMinMax(long long a[], int n) 
{
    pair<long long,long long>pr;
    
    long long mini=INT_MAX,maxi=INT_MIN;
    
    for(int i=0;i<n;i++)
    {
        if(a[i]>=maxi)
        {
            maxi=a[i];
        }
        if(a[i]<=mini)
        {
            mini=a[i];
        }
    }
    
    pr.first=mini;
    pr.second=maxi;
    
    return pr;
 }
