  long long sumMatrix(long long n, long long q) {
        if(q<=2*n)

        {

        if(q<=n+1)

        {

            return q-1;

        }

        if(q>n+1)

        {

            return 2*n-q+1;

        }

        if(q=2*n)

        {

            return 1;

        }

       }

        return 0;
    }
